menu-width = 230px
toolbar-color = rgba(#000, 0.3)

// sidebar
.sidebar
  color: #eee
  letter-spacing 3px
  .list__tile
    text-align center
  .divider
    margin: 10px 0
.sidebar--open, .sidebar--open.sidebar--mobile
  width: menu-width
  .logo
    color: #fff
    text-align center
    font-size: 35px
    margin-top: 13px
    letter-spacing 2px
    margin-bottom 30px
.with.left-fixed-sidebar main
  padding-left: menu-width
  @media screen and (max-width: 991px)
    padding-left: 0

// toolbar (top bar)
.toolbar.trans-dark
  position: fixed
  background-color toolbar-color
  box-shadow none
  height: 58px
  .toolbar__logo
    font-size: 35px
    display none
    @media screen and (max-width: 991px)
      display inline-block


.with.top-toolbar main
  min-height: 100vh

body
  background-color: #333
  font-family '微軟正黑體'

.content.home
  background-color: #333
  background-image url(/static/imgs/bg.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center center
  justify-content center
  align-items center
  display flex
  .slogan-wrap
    text-align center
    h3
      color: #fff
      font-size: 32px
      letter-spacing 12px
      margin-bottom 30px
      //font-weight 800
      @media screen and (max-width: 991px)
        letter-spacing 5px
        font-size: 38px

    a
      color: #fff
      border: 1px solid #fff
      margin: auto
      padding: 5px 50px
      text-decoration none
      font-size: 16px
      letter-spacing 7px
      transition: all 0.1s ease-in-out
      &:hover
        background-color: rgba(#fff, 0.2)
      @media screen and (max-width: 991px)
        padding: 10px 50px
        font-size: 18px



