menu-width = 230px
toolbar-color = rgba(#000, 0.3)
main-color = #ff7f50

*
  box-sizing: border-box

// transition
.slide-fade-enter-active {
  transition: all .3s ease;
}
.slide-fade-leave-active {
  transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0);
}
.slide-fade-enter, .slide-fade-leave-to{
  transform: translateX(10px);
  opacity: 0;
}

.fade-enter-active, .fade-leave-active {
  transition: opacity .3s ease-in-out
}
.fade-enter, .fade-leave-to /* .fade-leave-active in <2.1.8 */ {
  opacity: 0
}

.clearfix:before,
.clearfix:after {
  display: table;
  content: "";
}

.clearfix:after {
  clear: both
}

// modal
.my-modal-wrap#qrcode-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.5)
  display flex
  align-items center
  .modal-box
    min-width 300px
    margin auto
    background-color coral
    color #ff
    text-align center
    position relative
    border-radius 10px
    .close-btn
      cursor: pointer
      position absolute
      right 0
      top 0
      margin-top 15px
      margin-right 20px
      border 1px solid #fff
      border-radius 50%
      width 40px
      height 40px
      display flex
      align-items center
      i.icon
        margin auto
    .modal-box-content
      padding 30px 20px
      h4
        color: #fff
        font-size: 20px
        letter-spacing 3px
        line-height 25px
      img
        max-width 70%






// sidebar
.sidebar
  letter-spacing 3px
  .list__tile
    text-align center
    color #ddd
  .divider
    margin 10px 0
  &.sidebar--open, .sidebar--open.sidebar--mobile
    width menu-width
    .icon-logo
      margin: 15px auto 30px auto
.with.left-fixed-sidebar main
  padding-left menu-width
  @media screen and (max-width 991px)
    padding-left 0

// toolbar (top bar)
.toolbar.trans-dark
  position fixed
  background-color toolbar-color
  box-shadow none
  height 58px
  .toolbar__logo
    font-size 35px
    padding-top: 13px
    display none
    @media screen and (max-width 991px)
      display inline-block

// card
.el-card
  .el-card__body
    img
      //
    .card-content
      padding: 10px 14px
      display: flex
      justify-content: space-between
      align-items center
      .icon-plus
        cursor: pointer
      p
        margin: 3px 0
      .tag
        color: coral
        border: 1px solid coral
        text-align center
        line-height: 16px
        font-size: 12px
        letter-spacing 2px
        display: inline-block
        padding: 0 10px
      .title
        color: #666
        font-size: 14px
        letter-spacing 3px
      .dollar
        color: coral
        font-weight: bold
        letter-spacing 1px

// button
.el-button
  border: 1px solid #999
  color: #999
  padding: 8px 25px
  margin: 10px 0
  &:hover, &:active, &:focus, &.active
    border: 1px solid #999
    background-color: coral
    color: #fff

// breadcrumb
.el-breadcrumb__item
  font-weight bold
  color: #666
  font-size: 14px
.el-breadcrumb__item__inner a:hover, .el-breadcrumb__item__inner:hover
  color: #888


// cart 
div.cart 
  position: fixed
  height: 100vh
  z-index: 9
  right: 0
  width: 300px
  background-color: #eee
  box-shadow: 0 0 5px rgba(#000, 0.2)

body
  background-color #333
  font-family '微軟正黑體'

.with.top-toolbar main
  min-height 100vh
  >.content
    padding: 40px
    padding-top: 60px


// 產品頁
.page#products 
  .toolbar.trans-dark
    background-color #fff
    .btn
      color: #333
  .cart 
    display: flex
    flex-direction: column
    > .title 
      background-color: #666
      color: #fff 
      text-align: center 
      line-height: 40px
      letter-spacing: 5px
      font-size: 18px
    > .subTitle 
      background-color: #fff
      color: #666
      font-size: 12px
      padding: 8px 15px
    > .content 
      flex-grow: 0
      padding: 8px 15px
      height: 115px
      background-color: main-color
      color: #fff
      h5, p  
        margin: 0
        color: #fff
      h5 
        margin-bottom: 5px
        font-weight: bold
      p 
        font-size: 12px
        margin: 2px 0
        span 
          margin-right: 5px
    > .total 
      text-align: center
      font-size: 16px
      color: #666
      font-weight: bold
      padding: 15px
      > button.submit
        margin-top: 10px
        font-size: 16px
        height: 28px
        background-color: main-color
        display: block
        width: 100%
        color: #fff
    > .items
      flex-grow: 1
      flex-shrink: 1
      overflow-y: scroll
      .item 
        display: flex 
        background-color: #fff
        border-bottom: 1px solid #ccc
        .item-img
          border: 18px solid #fff
          width: 100px
          height: 100px
          overflow: hidden
          text-align: center
          // padding: 20px
          img 
            width: 150px
            margin: auto

        .item-content 
          padding: 20px
          display: flex
          flex-direction: column
          justify-content: center
          padding-left: 0
          p 
            margin: 0
            letter-spacing: 1px
          .title
            font-size: 14px 
            color: #666
            margin-bottom: 5px
          .tags 
            font-size: 12px
            color: #999
            margin-bottom: 2px
            span 
              margin-right: 5px
          .dollar
            font-size: 13px 
            font-weight: bold 
            color: main-color
  

// 首頁
.page#home .content
  background-color #333
  background-image url(/static/imgs/bg.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center center
  justify-content center
  align-items center
  display flex
  .slogan-wrap
    text-align center
    h3
      color #fff
      font-size 32px
      letter-spacing 12px
      margin-bottom 30px
      //font-weight 800
      @media screen and (max-width 991px)
        letter-spacing 5px
        font-size 38px

    a
      color #fff
      border 1px solid #fff
      margin auto
      padding 5px 50px
      text-decoration none
      font-size 16px
      letter-spacing 7px
      transition all 0.1s ease-in-out
      &hover
        background-color rgba(#fff, 0.2)
      @media screen and (max-width 991px)
        padding 10px 50px
        font-size 18px



