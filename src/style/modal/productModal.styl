// checkoutModal
.my-modal-wrap#product-modal
  position fixed
  z-index 999
  width 100vw
  height 100vh
  background-color rgba(#000, 0.7)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
  .modal-box
    min-width 300px
    margin auto
    height calc(100vh - 15%)
    background-color #fff
    color #666
    text-align center
    border-radius 10px
    position: relative
    // height: 100%
    overflow: hidden
    width: 300px
    @media(max-width: mobile-media)
      width: 100%
      height 100vh
      border-radius: 0
    .close-btn
      cursor: pointer
      position absolute
      right 0
      top 0
      margin-top 15px
      margin-right 20px
      border 1px solid #fff
      border-radius 50%
      width 40px
      height 40px
      display flex
      align-items center
      i.icon
        margin auto
        color: #fff
    .modal-box-content
      text-align: left
      display: flex
      flex-direction: column
      height: 100%
      
      .img-wrap
        // max-height: 180px
        img
          width: 100%
      
      h5 
        letter-spacing: 2px 
        font-size: 18px
        color: main-color
        padding: 5px 15px
      .btn-wrap
        padding:  0 15px
        padding-bottom: 20px 
        border-bottom: 1px solid #eee
        .btn-t1, .btn-t3
          margin-right: 10px
      .content 
        padding: 15px 
        padding-bottom: 0
        flex-grow: 1
        position: relative
        overflow-y: auto
        .attr
          margin: 8px 0
          color: #333
          font-weight: bold
        .selector-t2
          color: #666
          line-height: 34px
          letter-spacing: 2px 
          border-bottom: 2px dotted #ccc
          label 
            display: inline-block
            width: 80px
            color: #666
          
          .el-select 
            width: 180px
            .el-input__inner
              border: 0
              text-align: right
          .static-content
            display: inline-block
            width: 180px
            padding-left: 10px
            padding-right: 35px
            text-align: right
            color: #333
        .plus 
          color: #666
          line-height: 30px
          letter-spacing: 2px 
          margin-top: 10px
          span 
            color: #999
            border: 1px solid #ccc 
            display: inline-block 
            padding: 0 5px
            margin-right: 5px
            cursor: pointer
            &.active 
              border-color: main-color
              color: main-color

        .total
          display: flex 
          margin-top: 20px
          border: 1px solid #ccc
          padding: 10px
          div 
            flex: 1
            text-align: center
            font-weight: bold
            p
              color: main-color
              margin-top: 5px
          div.sign
            flex-shrink: 1
            display: flex
            align-items: center
            justify-content: center
            span 
              cursor: pointer
            span 
              width: 20px
              height: 20px
              display: inline-block
              background-color: main-color
              color: #fff
        .ps 
          margin-top: 10px
          textarea 
            border: 1px solid #ccc
            width: 100%
            height: 50px
        .singleCount
          margin: 20px 0
          > span , .el-input-number
            display: inline-block 
            vertical-align: middle
            

      .sub-btn-wrap
        .button
          color: main-color
          line-height: 40px
          font-size: 16px
          font-weight: bold 
          letter-spacing: 2px
          text-align: center
          cursor: pointer
          &:nth-of-type(1)
            background-color: main-color
            margin: 15px
            border-radius: 3px
            color: #fff
          &:nth-of-type(2)
            border-top: 1px solid #ccc
            color: #666
            
              
            
          
          


