// checkoutModal
.my-modal-wrap#product-order-modal
  position fixed
  z-index 999
  width 100vw
  height 100vh
  background-color rgba(#000, 0.7)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
  .modal-box
    width 60%
    margin auto
    height calc(100vh - 15%)
    background-color #fff
    color #666
    text-align left
    border-radius 10px
    position: relative
    // height: 100%
    overflow: hidden
    padding: 30px
    display: flex 
    flex-direction: column
    @media(max-width: mobile-media)
      width: 100%
      height 100vh
      border-radius: 0
    .modal-box-content
      flex-grow: 1
      h5 
        font-size: 23px
        font-weight: bold
        margin-bottom: 30px
      .form-item
        margin: 10px 0
        .mu-text-field-hint
          color: #666
      .plus 
        color: #666
        line-height: 30px
        letter-spacing: 2px 
        margin-top: 10px
        margin-bottom: 20px
        font-size: 16px
        span 
          color: #999
          border: 1px solid #ccc 
          display: inline-block 
          padding: 0 5px
          margin-right: 15px
          cursor: pointer
          &.active 
            background-color: #999
            color: #fff
    .modal-box-footer 
      text-align: right 
      button 
        margin-left: 20px
        font-weight: bold 
        font-size: 15px
        &.text-blue 
          color: main-blue
      

