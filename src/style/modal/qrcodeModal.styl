// qrcodeModal
.my-modal-wrap#qrcode-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.7)
  display flex
  align-items center
  padding: 20px
  .modal-box
    margin auto
    background-color #eee
    position relative
    border-radius 10px
    overflow: hidden
    padding: 25px
    
    .icon-circle-close
      position: absolute 
      right: 0
      top: 0
      margin: 15px
      cursor: pointer
    .modal-box-title
      padding-top: 10px
      padding-bottom: 30px
      text-align: center
      h5 
        font-size: 20px 
        color: #333 
        margin-bottom: 5px
        font-weight: bold
      p 
        font-size: 16px 
        color: #999 
    .modal-box-content
      img
        width 236px
        margin-bottom: 5px
      
      .app-icons
        text-align: center
        margin-left: -10px
        margin-top: 5px

        > div 
          display: flex 
          align-items: center 
          justify-content: center
          width: 105px
          float: left 
          border: 1px solid #999
          height: @width
          margin-left: 10px
          cursor: pointer
          &:hover 
            opacity: 0.8
          

          img 
            width: 50px



