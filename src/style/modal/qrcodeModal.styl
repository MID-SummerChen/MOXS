// qrcodeModal
.my-modal-wrap#qrcode-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.5)
  display flex
  align-items center
  padding: 20px
  .modal-box
    width 250px
    margin auto
    background-color #eee
    position relative
    border-radius 10px
    overflow: hidden
    .modal-box-title
      color #fff
      line-height: 40px
      background-color main-color
      padding: 0 15px
      font-weight: bold
      .close-btn
        cursor: pointer
        position absolute
        right 0
        top 0
        margin-top 8px
        margin-right 10px
        border 1px solid #fff
        border-radius 50%
        width 22px
        height 22px
        display flex
        align-items center
        i.icon
          margin auto
          font-size: 15px
    .modal-box-content
      padding 15px
      h4
        color: #fff
        font-size: 20px
        letter-spacing 3px
        line-height 25px
      img
        width 100%
      
      .app-icons
        text-align: center
        margin-left: -10px
        margin-top: 5px

        > div 
          display: flex 
          align-items: center 
          justify-content: center
          width: 105px
          float: left 
          border: 1px solid #999
          height: @width
          margin-left: 10px
          cursor: pointer
          &:hover 
            opacity: 0.8
          

          img 
            width: 50px



