// checkoutModal
.my-modal-wrap#phone-verify-modal
  position fixed
  z-index 999
  width 100vw
  height 100vh
  background-color rgba(#000, 0.5)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
    z-index: 999
  .modal-box
    width 300px
    min-height: 220px
    margin auto
    background-color #fff
    position relative
    border-radius 5px
    padding: 20px
    display: flex
    flex-direction: column
    
    .modal-box-content
      flex-grow: 1
      h5 
        line-height: 18px
        font-size: 15px
        font-weight: bold
        i.fa 
          font-size: 22px
          vertical-align: top
          margin-right: 5px
        &.success-title 
          color: main-green
          margin-bottom: 10px
        &.error-title 
          color: main-color
          margin-bottom: 10px
          
      p
        font-size: 11px 
        color: #666
        margin-top: 5px 
      form 
        margin: 15px 0
        input[type="text"]
          border: 1px solid #ccc 
          width: 100%
          height: 35px
          font-size: 13px
          text-indent: 10px
        button.submit-btn 
          height: 35px 
          display: block 
          width: 100%
          border: 1px solid main-blue 
          color: main-blue
          font-size: 13px
          margin-top: 10px
      label 
        color: #333 
        font-size: 14px 
        font-weight: bold 
        margin-bottom: 3px
        display: inline-block

      .code-box 
        border: 1px solid #ccc 
        padding: 6px 0
        text-align: center
        font-size: 20px 
        font-weight: bold
        font-family: Verdana
    .modal-box-footer
      text-align: right
      button 
        margin-left: 20px 
        letter-spacing: 3px 
        font-weight: bold 
        border: none
        font-size: 13px 
        color: #333
        &.blue-text
          color: main-blue
            
          
          


