// checkoutModal
.my-modal-wrap#product-intro-modal
  position fixed
  z-index 999
  width 100vw
  height 100vh
  background-color rgba(#000, 0.7)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
  .modal-box
    width 60%
    margin auto
    height calc(100vh - 15%)
    background-color #fff
    color #666
    text-align left
    border-radius 10px
    position: relative
    // height: 100%
    overflow: hidden
    padding: 30px
    display: flex 
    flex-direction: column
    @media(max-width: mobile-media)
      width: 100%
      height 100vh
      border-radius: 0
    .modal-box-content
      flex-grow: 1
      h5 
        font-size: 23px
        font-weight: bold
        @media(max-width: mobile-media)
          margin-top: 20px
      img 
        max-width: 100%
      .intro 
        .attr 
          margin-top: 20px
          font-weight: bold
        .desc 
          margin-top: 10px
    .modal-box-footer 
      text-align: right 
      button 
        margin-left: 20px
        font-weight: bold 
        font-size: 15px
        &.text-blue 
          color: main-blue
            
              
            
          
          


