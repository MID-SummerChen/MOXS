// checkoutModal
.my-modal-wrap#order-record-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.5)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
    z-index: 999
  .modal-box
    width 300px
    min-height: 320px
    margin auto
    background-color #fff
    position relative
    border-radius 5px
    padding: 20px
    display: flex
    flex-direction: column
    
    .modal-box-content
      flex-grow: 1
      h5 
        line-height: 18px
        font-size: 15px
        font-weight: bold
        margin-bottom: 15px

    .modal-box-footer
      text-align: right
      button 
        margin-left: 20px 
        letter-spacing: 3px 
        font-weight: bold 
        border: none
        font-size: 13px 
        color: #333
        &.blue-text
          color: main-blue
            


