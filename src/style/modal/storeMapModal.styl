// checkoutModal
.my-modal-wrap#store-map-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.7)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
    z-index: 999
  .modal-box
    max-height: calc(100vh - 40px)
    overflow-y: auto
    min-width 300px
    margin auto
    background-color #fff
    color #666
    text-align center
    position relative
    border-radius 10px
    @media(max-width: mobile-media)
      overflow-y: auto
      height: 100%
      border-radius: 0
      margin: 0
      min-width: 100vw
      min-height: 100vh
    .close-btn
      cursor: pointer
      position absolute
      right 0
      top 0
      margin-top 10px
      margin-right 10px

      display flex
      align-items center
      // @media(max-width: mobile-media)
      //   display: none
      i.icon
        margin auto
        color: #999
    
    .modal-box-content
      padding: 35px 30px
      width: 500px
      @media(max-width: mobile-media)
        width: 100%
        padding: 20px
      .mapWrap
        width: 100% 
        height: 500px
        @media(max-width: mobile-media)
          height: calc(100vh - 100px)