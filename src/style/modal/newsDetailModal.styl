// checkoutModal
.my-modal-wrap#news-detail-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.7)
  display flex
  align-items center
  padding: 20px
  @media(max-width: mobile-media)
    padding: 0
    z-index: 999
  .modal-box
    width 500px
    max-height: calc(100vh - 40px)
    margin auto
    background-color #fff
    color #666
    position relative
    border-radius 5px
    @media(max-width: mobile-media)
      overflow-y: scroll
      height: 100%
      border-radius: 0
      max-height: 100vh
    .close-btn
      cursor: pointer
      position absolute
      right 0
      top 0
      margin-top 15px
      margin-right 15px
      display flex
      @media(max-width: mobile-media)
        // display: none
      i.icon
        margin auto
        color: #999
    
    .modal-box-header 
      border-bottom: 1px solid #eee
      padding: 15px 20px
      p.title-top 
        color: #999 
        margin-bottom: 3px
      h5 
        color: #333
        margin-bottom: 2px
        font-size: 22px
        @media(max-width: mobile-media)
          font-size: 20px
      p.date 
        color: main-color
    .modal-box-content
      padding: 20px
      padding-bottom: 50px 
      max-height: 600px
      overflow-y: scroll
      img 
        width: 100%
        margin-bottom: 20px
      p 
        line-height: 20px 
        letter-spacing: 1px 
        font-size: 12px