.page#News
    main > .content 
        min-height: 100vh
        background-color #f8f8f8
        padding-top: 60px
        @media(max-width: ipad-media)
            background-color: #fff

    .main-content 
        padding-top: 30px
        @media(max-width: ipad-media)
            padding-top: 20px

    .items 
        width: 700px
        margin: 0 auto
        margin-bottom: 10px

        $itemH = 200px
        $itemImgW = 260px
        $itemImgW_m = 150px
        .item
            height: $itemH
            padding: 5px
            cursor: pointer
            background-color: #fff 
            box-shadow: 0 3px 5px rgba(#000, 0.2)
            @media(max-width: mobile-media)
                height: 90px
            .item-img
                width: $itemImgW
                height: 100%
                display: inline-block
                background-size: cover 
                background-position: center center
                @media(max-width: mobile-media)
                    width:  $itemImgW_m
                    height: 80px
            .item-content
                padding: 10px 20px
                vertical-align: top
                display: inline-block
                width: "calc(100% - %s - 10px)" % ($itemImgW)
                height: 100%
                @media(max-width: mobile-media)
                    padding: 10px 15px
                    width: "calc(100% - %s - 10px)" % ($itemImgW_m)
                .item-content-body
                    height: 90%
                    width: 100%
                    .text
                        display: block; /* Fallback for non-webkit */
                        display: -webkit-box;
                        height: 80%; /* Fallback for non-webkit */
                        font-size: 14px;
                        line-height: 20px;
                        -webkit-line-clamp: 3;
                        -webkit-box-orient: vertical;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        color: #999
                        font-size: 12px
                        @media(max-width: mobile-media)
                            display: none
                .item-content-footer
                    height: 10%
                    text-align: right
                    width: 100%