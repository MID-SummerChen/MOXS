// 首頁
.page#Home .content
  background-color #333
  background-image url(/static/imgs/bg.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center center
  justify-content center
  align-items center
  display flex
  height: 100vh
  .slogan-wrap
    text-align center
    h3
      color #fff
      font-size 32px
      letter-spacing 12px
      margin-bottom 30px
      //font-weight 800
      @media screen and (max-width 991px)
        letter-spacing 5px
        font-size 38px

    a
      color #fff
      border 1px solid #fff
      margin auto
      padding 5px 50px
      text-decoration none
      font-size 16px
      letter-spacing 7px
      transition all 0.1s ease-in-out
      &hover
        background-color rgba(#fff, 0.2)
      @media screen and (max-width 991px)
        padding 10px 50px
        font-size 18px



