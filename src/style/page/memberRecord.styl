.page#MemberRecord
    main > .content 
        min-height: 100vh
        background-color #f8f8f8
        padding-top: 60px
        @media(max-width: ipad-media)
            background-color: #fff
    .main-content 
        padding-top: 30px
        @media(max-width: ipad-media)
            padding-top: 20px



    .paper
        padding: 50px 40px
        position: relative
        display: flex 
        flex-direction: column

        @media(max-width: mobile-media)
            padding: 10px
        .paper-content
            flex-grow: 1
            .date-items 
                margin-bottom: 20px
                .date 
                    color: #9b9b9b
                .items 
                    .item-resv
                        padding: 13px 0 
                        border-bottom: 1px solid #ddd
                        cursor: pointer
                        p
                            color: #666
                            &:first-of-type 
                                font-weight: bold 
                                color: #000
                                margin-bottom: 3px
                                span.status 
                                    color: main-blue
                                    float: right
                                i 
                                    margin-left: 10px 
                                    color: main-color
                    .item-ord
                        border-bottom: 1px solid #ccc
                        padding: 15px 5px
                        cursor: pointer
                        display: flex 
                        span 
                            flex: 1
                            text-align: center
                            &:first-of-type 
                                text-align: left
                        span.status 
                            color: main-blue
        .paper-footer 
            text-align: center 
            font-size: 16px 
            letter-spacing: 1px
            font-weight: bold 
            padding: 10px
            background-color: #eee
            margin-bottom: -50px
            margin-left: -40px
            margin-right: -40px
            cursor: pointer
            &:hover 
                background-color: #e3e3e3