// 結帳頁
.page#info 
  main > .content 
    min-height: 100vh
    background-color #f8f8f8
    @media(max-width: mobile-media)
      padding-left: 0
      padding-right: 0
      background-color: #fff
  .toolbar.trans-dark
    background-color #f8f8f8
    @media(max-width: mobile-media)
      position: fixed
      z-index: 99
      background-color: #333
    .btn
      color: #333
  h5.pageTitle 
    color: #999 
    font-size: 17px 
    letter-spacing: 2px
    margin-bottom: 15px
    @media(max-width: mobile-media)
      margin-top: 20px
      margin-bottom: 0
      padding: 0 20px
      font-size: 20px
  .paper
    background-color: #fff 
    box-shadow: 0 0 5px rgba(#000, 0.1)
    height: calc(100vh - 180px)
    display: flex
    flex-direction: column
    padding: 20px
    @media(max-width: mobile-media)
      padding: 10px 20px
      box-shadow: none
    &.location
      p
        font-size: 12px
        line-height: 20px
        letter-spacing: 1px
        color: #666
      p.name
        font-weight: bold
        font-size: 14px 
        margin-bottom: 3px
        color: #000
      .items 
        overflow-y: scroll
        .item 
          display: flex 
          border: 1px solid #ccc
          padding: 10px
          margin-bottom: 10px
          .content 
            flex-grow: 1
          .icon-location 
            position: relative
            top: 17px
          
    &.store-info
      img 
        @media(max-width: mobile-media)
          margin: 0 -20px
      .content 
        margin-top: 20px
        p
          letter-spacing: 1px
          text-align: justify
          line-height: 22px
          font-size: 13px
          @media(max-width: mobile-media)
            font-size: 15px
            line-height: 24px
      button.block-btn
        background-color: main-color
        color: #fff
        height: 50px
        font-size: 15px 
        letter-spacing: 2px
        font-weight: bold
        
