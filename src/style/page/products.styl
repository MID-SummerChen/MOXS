// 產品頁
.page#Products 
  main > .content
    background-color: #f8f8f8
    padding-top: 60px
  .toolbar.trans-dark
    background-color #f8f8f8
    border-bottom: 1px solid #ccc
    .btn
      color: #333

  .category-btn-group
    padding-top: 20px

    .el-button
      border: 1px solid #999
      color: #999
      padding: 8px 25px
      margin: 10px 5px
      background-color: transparent
      &:hover, &:active, &:focus, &.active
        border: 1px solid #999
        background-color: coral
        color: #fff

  .el-card
    .el-card__body
      .img-wrap
        width: 100% 
        height: 20vh
        background-size: cover
        background-image: url(/static/imgs/food03.jpg)
      .card-content
        padding: 10px 14px
        display: flex
        justify-content: space-between
        align-items center
        .icon-plus
          cursor: pointer
        p
          margin: 3px 0
        .tag
          color: coral
          border: 1px solid coral
          text-align center
          line-height: 16px
          font-size: 12px
          letter-spacing 2px
          display: inline-block
          padding: 0 10px
        .title
          color: #666
          font-size: 14px
          letter-spacing 3px
        .dollar
          color: coral
          font-weight: bold
          letter-spacing 1px
  
