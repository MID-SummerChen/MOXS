// 產品頁
.page#Products 
  main > .content
    background-color: #f8f8f8
    padding-top: 60px

  .category-btn-group
    padding-top: 20px

    .el-button
      border: 1px solid #999
      color: #999
      padding: 8px 25px
      margin: 0
      margin-right: 10px
      margin-bottom: 10px
      background-color: transparent
      &:hover, &:active, &:focus, &.active
        border: 1px solid #999
        background-color: main-color
        color: #fff
    .el-button.is-disabled
      // background-color: #ccc
      // border: 1px solid #ccc
      // color: #fff
      &:hover, &:active, &:focus, &.active
        border: 1px solid #999
        color: #999
        background-color: transparent

  item-img-width = 200px
  item-img-height = item-img-width * (9/16)
  .prevClsBtn
    cursor: pointer
  .items
    margin: 0 -30px
    margin-top: 20px
    // margin-left: -5px
    &:after 
      content: ""
      display: table
      clear: both
    .el-card
      width: item-img-width
      float: left
      margin: 10px
      @media(max-width: mobile-media)
        width: calc(50vw + 10px)
        margin: 0
      .el-card__body
        .img-wrap
          width: 100% 
          height: item-img-height
          background-size: cover
          background-image: url(/static/imgs/food03.jpg)
          cursor: pointer
          @media(max-width: mobile-media)
            width: calc(50vw + 10px)
            height: calc(50vw + 10px)
        .card-content
          padding: 10px 14px
          display: flex
          justify-content: space-between
          align-items center
          .card-content-title
            max-width: 130px
          .icon-plus
            cursor: pointer
          p
            margin: 3px 0
          .tag
            color: main-color
            border: 1px solid main-color
            text-align center
            line-height: 16px
            font-size: 12px
            letter-spacing 2px
            display: inline-block
            padding: 0 10px
          .desc
            color: main-color
            font-size: 16px
            letter-spacing: 1.5px
            display: block
            display: -webkit-box
            max-width: 100%
            height: 43px
            margin: 0 auto
            line-height: 1.4
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical
            overflow: hidden
            text-overflow: ellipsis
          .dollar
            color: #666
            font-weight: bold
            letter-spacing 1px
            height: 18px
    
