// 結帳頁
.page#checkout 
  main > .content 
    min-height: 100vh
    background-color #f8f8f8
    @media(max-width: mobile-media)
      background-color: #fff
  .toolbar.trans-dark
    background-color #f8f8f8
    @media(max-width: mobile-media)
      position: fixed
      z-index: 99
      background-color: #333
    .btn
      color: #333
  h5.pageTitle 
    color: #999 
    font-size: 17px 
    letter-spacing: 2px
    margin-bottom: 15px
    @media(max-width: mobile-media)
      margin: 0 -20px
      margin-top: 20px
      margin-bottom: 10px
      font-size: 20px
  .paper
    background-color: #fff 
    box-shadow: 0 0 5px rgba(#000, 0.1)
    height: calc(100vh - 180px)
    display: flex
    flex-direction: column
    @media(max-width: mobile-media)
      height: auto
      margin: 0 -20px
      box-shadow: none
    .btn-wrap 
      button 
        background-color: main-color
        color: #fff
        width: 100%
        height: 40px 
        line-height: 40px
        font-weight: bold 
        letter-spacing: 4px
    .form
      flex-grow: 1
      @media(max-width: mobile-media)
        margin: 0 -20px
      .check-group 
        margin: 20px
        margin-bottom: 25px
        input[type="checkbox"]
          margin-right: 10px
      .form-group
        margin: 20px 20px
        label 
          display: block 
          margin-bottom: 5px
          color: #999
          letter-spacing: 2px
        div.selector
          border: 1px solid main-color
          height: 40px
          line-height: 40px
          font-weight: bold
          font-size: 17px
          letter-spacing: 2px
          padding: 0 10px
          span
            float: right
            font-size: 13px 
            font-weight: 400
        input[type="text"], input[type="number"], input[type="email"]
          width: 100%
          height: 40px 
          text-indent: 10px
          font-size: 17px
          letter-spacing: 2px
          border: 1px solid #ccc
          background-color: #eee
    .items 
      flex: 1 1 auto
      overflow-y: scroll 
      > .item 
        display: flex 
        padding: 15px 20px
        border-bottom: 1px solid #eee
        @media(max-width: mobile-media)
          background-color: #f8f8f8
          border-bottom: 6px solid #fff
        > div 
          flex: 1
          font-size: 13px
          display: flex
          flex-direction: column
          justify-content: center
          &.title 
            .name 
              color: #666 
              margin-bottom: 5px
            .tags 
              color: #999 
              span 
                margin-right: 5px
          &.count 
            text-align: center
          &.dollar 
            text-align: right
            font-weight: bold
    .total
      background-color: #eee
      padding: 15px 20px
      display: flex
      color: #666 
      letter-spacing: 2px
      @media(max-width: mobile-media)
        background-color: main-color
        color: #fff
      .total-count 
        flex-grow: 1
