// 結帳頁
.page#Checkout 
  .btn-wrap 
    margin-top: 60px
    text-align: right 
    a 
      text-decoration: none 
      color: #000
      font-weight: bold 
      font-size: 16px
      margin-left: 30px 
      &.text-blue 
        color: #2196f3
  .form
    margin-top: 30px
    flex-grow: 1
    @media(max-width: mobile-media)
      margin: 0 -20px
    .check-group 
      margin: 25px 0
      input[type="checkbox"]
        margin-right: 10px
    .form-group
      label 
        display: block 
        margin-bottom: 5px
        color: #000
        letter-spacing: 2px
      div.selector
        border: 1px solid main-color
        height: 50px
        line-height: 50px
        font-weight: bold
        font-size: 17px
        letter-spacing: 2px
        padding: 0 10px
        span
          float: right
          font-size: 13px 
          font-weight: 400
      input[type="text"], input[type="number"], input[type="email"]
        width: 100%
        height: 50px 
        text-indent: 10px
        font-size: 17px
        letter-spacing: 2px
        border: 1px solid #ccc
  .items-header 
    display: flex 
    border-bottom: 1px solid main-color
    padding: 15px
    padding-bottom: 5px
    color: main-color
    > div 
      flex: 1
      font-size: 13px
      &.count 
        text-align: center
      &.dollar
        text-align: right
  .items 
    > .item 
      display: flex 
      padding: 15px
      border-top: 1px solid #eee
      &:first-of-type 
        border-top: 0
      @media(max-width: mobile-media)
        background-color: #f8f8f8
        border-bottom: 6px solid #fff
      > div 
        flex: 1
        font-size: 13px
        display: flex
        flex-direction: column
        justify-content: center
        &.title 
          .name 
            color: #000 
            margin-bottom: 5px
          .tags 
            color: #999 
            span 
              margin-right: 5px
        &.count 
          text-align: center
        &.dollar 
          text-align: right
          font-weight: bold
  .total 
    text-align: right
    color: main-color 
    padding: 15px
    border-top: 1px solid main-color
    font-weight: bold
    b 
      color: #000 
      font-size: 20px
      margin-left: 10px

