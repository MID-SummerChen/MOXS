// 結帳頁
.page#Checkout 
  main > .content 
    background-color #f8f8f8
    @media(max-width: mobile-media)
      background-color: #fff
  .toolbar.trans-dark
    background-color #f8f8f8
    border-bottom: 1px solid #ccc
    @media(max-width: mobile-media)
      position: fixed
      z-index: 99
      background-color: #333
    .btn
      color: #333
  .main-content
    padding-top: 30px
  .paper
    // height: calc(100vh - 180px)
    overflow-y: scroll
    width: 800px 
    margin: 0 auto
    background-color: #fff 
    box-shadow: 0 0 5px rgba(#000, 0.1)
    display: flex
    flex-direction: column
    padding: 30px
    @media(max-width: mobile-media)
      height: auto
      margin: 0 -20px
      box-shadow: none
    .btn-wrap 
      margin-top: 60px
      text-align: right 
      a 
        text-decoration: none 
        color: #000
        font-weight: bold 
        font-size: 16px
        margin-left: 30px 
        &.text-blue 
          color: #2196f3
    .form
      margin-top: 30px
      flex-grow: 1
      @media(max-width: mobile-media)
        margin: 0 -20px
      .check-group 
        margin: 25px 0
        input[type="checkbox"]
          margin-right: 10px
      .form-group
        label 
          display: block 
          margin-bottom: 5px
          color: #000
          letter-spacing: 2px
        div.selector
          border: 1px solid main-color
          height: 50px
          line-height: 50px
          font-weight: bold
          font-size: 17px
          letter-spacing: 2px
          padding: 0 10px
          span
            float: right
            font-size: 13px 
            font-weight: 400
        input[type="text"], input[type="number"], input[type="email"]
          width: 100%
          height: 50px 
          text-indent: 10px
          font-size: 17px
          letter-spacing: 2px
          border: 1px solid #ccc
    .items-header 
      display: flex 
      border-bottom: 1px solid main-color
      padding: 15px
      padding-bottom: 5px
      color: main-color
      > div 
        flex: 1
        font-size: 13px
        &.count 
          text-align: center
        &.dollar
          text-align: right
    .items 
      > .item 
        display: flex 
        padding: 15px
        border-top: 1px solid #eee
        &:first-of-type 
          border-top: 0
        @media(max-width: mobile-media)
          background-color: #f8f8f8
          border-bottom: 6px solid #fff
        > div 
          flex: 1
          font-size: 13px
          display: flex
          flex-direction: column
          justify-content: center
          &.title 
            .name 
              color: #000 
              margin-bottom: 5px
            .tags 
              color: #999 
              span 
                margin-right: 5px
          &.count 
            text-align: center
          &.dollar 
            text-align: right
            font-weight: bold
    .total 
      text-align: right
      color: main-color 
      padding: 15px
      border-top: 1px solid main-color
      font-weight: bold
      b 
        color: #000 
        font-size: 20px
        margin-left: 10px

