.page#MemberRecordDetail
    .paper
        .top-title
            display: flex
            justify-content: space-between
            padding-bottom: 10px 
            border-bottom: 1px solid #ccc
            margin-bottom: 30px
            .text-info 
                h4 
                    font-size: 30px 
                    font-weight: bold 
                p 
                    font-weight: bold 
                    font-size: 18px
                    margin-top: 10px
            .store 
                font-size: 20px 
                font-weight: bold
        .record-content
            label 
                color: #666
                display: block 
                margin-bottom: 5px
            .number-box 
                border: 1px solid #ccc
                font-size: 25px
                font-weight: bold
                padding: 10px 0 
                text-align: center
                margin-bottom: 30px
                width: 100%
                &.status 
                    color: main-blue
            p 
                line-height: 25px
        h5 
            font-size: 16px 
            border-bottom: 1px solid #ccc
            font-weight: bold
            color: #666
            margin-top: 30px
        .items 
            > .item 
                display: flex 
                padding: 15px
                border-top: 1px solid #eee
                &:first-of-type 
                    border-top: 0
                    @media(max-width: mobile-media)
                        background-color: #f8f8f8
                        border-bottom: 6px solid #fff
                > div 
                    flex: 1
                    font-size: 13px
                    display: flex
                    flex-direction: column
                    justify-content: center
                    &.title 
                        .name 
                            color: #000 
                            margin-bottom: 5px
                        .tags 
                            color: #999 
                            span 
                                margin-right: 5px
                    &.count 
                        text-align: center
                    &.dollar 
                        text-align: right
                        font-weight: bold
        .total 
            text-align: right
            color: #666 
            padding: 15px
            border-top: 1px solid #ccc
            font-weight: bold
            b 
                color: #000 
                font-size: 20px
                margin-left: 10px

        .btn-wrap 
            justify-content: space-between
            a 
                margin: 0
