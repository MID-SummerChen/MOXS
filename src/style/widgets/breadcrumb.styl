// breadcrumb
.main-title
  margin-top: -40px
  z-index: 9
  position: fixed
  @media(max-width: ipad-media)
    margin-top: 20px
    position: static
  ul, li
    margin: 0 
    padding: 0 
    list-style: none
    cursor: pointer 
    &:hover 
      color: #777
    &:last-of-type
      cursor: auto 
      &:hover 
        color: #666
  > ul > li 
    display: inline-block
    color: #666
    font-weight: bold
    font-size: 16px
    > a 
      text-decoration: none 
      color: #666
      font-weight: bold
      font-size: 16px
    &:before 
      content: ">"
      margin: 0 10px
    &:first-of-type:before 
      content: ""
      margin: 0
