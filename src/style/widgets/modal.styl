// modal
.my-modal-wrap#qrcode-modal
  position fixed
  z-index 99
  width 100vw
  height 100vh
  background-color rgba(#000, 0.5)
  display flex
  align-items center
  .modal-box
    min-width 300px
    margin auto
    background-color coral
    color #ff
    text-align center
    position relative
    border-radius 10px
    .close-btn
      cursor: pointer
      position absolute
      right 0
      top 0
      margin-top 15px
      margin-right 20px
      border 1px solid #fff
      border-radius 50%
      width 40px
      height 40px
      display flex
      align-items center
      i.icon
        margin auto
    .modal-box-content
      padding 30px 20px
      h4
        color: #fff
        font-size: 20px
        letter-spacing 3px
        line-height 25px
      img
        max-width 70%


